{
    "name": "KotN Helper",
    "version": "1.4",
    "manifest_version": 3,
    "icons": {
        "16": "images/icon-16.jpeg",
        "32": "images/icon-32.jpeg",
        "48": "images/icon-48.jpeg",
        "128": "images/icon-128.jpeg"
    },
    "permissions": [
        "activeTab",
        "notifications",
        "cookies",
        "storage",
        "offscreen"
    ],
    "host_permissions": [
        "https://*.kotnauction.com/*"
    ],
    "background": {
        "service_worker": "service_worker.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.kotnauction.com/auctions/*"
            ],
            "js": [
                "content_script_auctions.js"
            ]
        },
        {
            "matches": [
                "https://*.kotnauction.com/listings/watched*"
            ],
            "js": [
                "content_script_watched.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "*://*/*"
            ],
            "resources": [
                "inject_auctions.js",
                "inject_auctions.css",
                "inject_watched.js",
                "inject_watched.css",
                "audio/beep.mp3",
                "audio/yay.mp3"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}
